pipeline {
environment {
    registry = “jesudoss/mapit-openshift”
    registryCredential = ‘b0360de8-fc57-458b-8471-ff693c8ee5c6’
    dockerImage = ‘’
  }
agent{
      label 'maven'
  }
  stages {
  stage(‘Cloning Git’) {
      steps {
        git ‘https://github.com/VijayalakshmiKumar02/mapit-spring.git'
      }
    }
    }
    stage('Build App') {
      steps {
        sh "mvn install"
        
      }
    }
    stage(‘Building image’) {
      steps{
        script {
          dockerImage = docker.build registry + “:$BUILD_NUMBER”
        }
      }
    }
    stage(‘Deploy Image’) {
      steps{
         script {
            docker.withRegistry( ‘’, registryCredential ) {
            dockerImage.push()
          }
        }
      }
    }
  }  

